<br><br>
<div class="container">
  <div class="row">
    <div class="col-md-9 mx-auto">
      <%= form_for @event do |event| %>
        <div class="card" style="width: 100%">
        <img class="card-img-top" src="https://www.newstatesman.com/sites/all/themes/creative-responsive-theme/images/new_statesman_events.jpg" width="318" height="318" alt="Card image cap">
        <div class="card-body">
          <h2 class="card-title">Titre: <%= event.text_field :title %></h2>
          <hr align="left" width="42%" color=white>
          <h2 class="card-title">Descrition:</h2>
          <p class="card-text"><small><%= event.text_field :description %></small></p>
          <hr align="left" width="100%" color=white>
          <h4 class="card-text text-muted">Date: <%= @event.start_date.strftime("%a, %h, %Y à %Hh%M") %><span class="small text-muted">(Pas encore dispo à la modification)</span></h4>
          <hr align="left" width="40%" color=white>
          <h4 class="card-text text-muted mb-2">Location: <%= event.text_field :location %></h4>
          <hr align="left" width="35%" color=white>
          <h4 class="card-text text-muted mb-2">Prix: <%= event.text_field :price %>€</h4>
      <%= submit_tag "Mettre à jour", :class => "btn btn-info"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>
<div class="text-center"><%= link_to "Retour à la page principal", root_path, :class => "btn btn-secondary btn-sm link"%></div>
