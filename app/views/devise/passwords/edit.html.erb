<br>
<h2>Changer votre mot de passe</h2>
<br>

<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "Nouveau mot de passe" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mb-4", placeholder: "Votre email" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control mb-4", placeholder: "Votre email" %>
    </div>

    <div class="actions">
      <%= f.submit "Changer mon mot de passe", class: 'btn btn-info' %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>
