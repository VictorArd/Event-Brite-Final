<div class="container">
  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-4", placeholder: "Votre email" %>
    </div>

    <div class="actions">
      <%= f.submit "Renvoyer les instructions" %>
    </div>
  <% end %>
  <br>
  <%= render "devise/shared/links", class: 'btn btn-info'%>
</div>
